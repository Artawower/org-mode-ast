{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2021", "es7", "es6", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

{
  "compilerOptions": {
    "target": "es2021",
    "rootDir": "./src",
    "baseUrl": "./src",
    "module": "es6",
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "src/test-helper.ts"]
}
